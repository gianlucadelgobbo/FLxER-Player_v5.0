package FlxerGallery.core {	import flash.display.Sprite;	import FlxerGallery.main.Txt2;	public class SubTitler extends Sprite {		public var newT:Sprite;		var w:uint;		var h:uint;		public function SubTitler() {			x = 0;			y = Preferences.pref.testaH;			w = Preferences.pref.w			h = Preferences.pref.h-(Preferences.pref.testaH+Preferences.pref.piedeH+Preferences.pref.testaY)		}		public function avvia() {			trace("SubTitler"+Preferences.pref.testaH+" "+Preferences.pref.h)			newT = new Button();			newT.avvia({fnzOut:newSub,txt:"MAKE SUBTITLE",alt:Preferences.pref.makeShot});			newT.scaleX = newT.scaleY = 2;			newT.x = int(w-newT.width)-10			newT.y = int(h)-35			this.addChild(newT);		}		public function newSub(a) {			myTxtField = new Txt2(10, 50, Preferences.pref.w-20, 23, "aaaaaaaaaa", Preferences.pref.ts, "input",saveThumb);			myTxtField.multiline = true;			myTxtField.wordWrap = true;			this.addChild(myTxtField);		}		public function saveThumb() {			trace(Preferences.pref.interfaceTrgt.myToolbar.myTime(Preferences.pref.interfaceTrgt.myMonitor.myPlayer.NS.time)+" / "+myTime(Preferences.pref.interfaceTrgt.myMonitor.myPlayer.myDuration))		}	}}